@model HalloDoc_mvc.Entities.Admin.ViewUplaod;
@{
    int i = 0;
}
<head>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/ViewDocument.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>


<div class="mainHeader">
    <div class="documentBack">
        <h3>Documents</h3>
        <div class="BackMainBtn">
            <button type="button" class="BackBtn" onclick="@("window.location.href='" + @Url.Action("AdminDashboard", "Admin") + "'");">Back</button>
        </div>
    </div>
</div>

<div class="main">
    <div class="viewDocument">
        <p class="patientName">Patient Name</p>
        <p><span class="username"><strong></strong>  </span> </p>
        <p>Click here for any files that you or the doctors of your subsequents requestors have attached for you to review</p>
        <form enctype="multipart/form-data">
            <div class="row mb-2">
                <div class="col-12 col-sm-12">
                    <div class="input-group mb-3">
                        <input type="text" asp-for="@Model.RequestId" hidden />
                        <input type="file" class="form-control" asp-for="file" id="UploadButton" style="padding-right: 0px;">
                    </div>
                </div>
                <div class="col-12 col-sm-12">
                    <button type="submit" class="fileSubmit">Submit</button>
                </div>
            </div>
        </form>
        <div class="titleDownload">
            <h4>Document</h4>
            <div class="downloadBtn">
                <button type="button" class="download">Download All</button>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr class="table-active">
                        <th scope="col" class="tableHead">Documents</th>
                        <th scope="col" class="tableHead">Upload Date</th>
                        <th scope="col" class="tableHead">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in Model.Requestfiles!)
                    {
                        <tr>
                            <td>@file.FileName</td>
                            <td>@file.CreatedDate</td>
                            <td>
                                <a class="downloadCloud" asp-action="Download" asp-route-id="@file.RequestWiseFileId">
                                    <img src="~/image/cloud-arrow-down.svg" />
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>







        <div class="accordion mb-4" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading_@i">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@i" aria-expanded="false" aria-controls="collapse_@i">
                    </button>
                </h2>
                <div id="collapse_@i" class="accordion-collapse collapse" aria-labelledby="heading_@i" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        Uploader:
                        <strong>

                        </strong>
                        <br />
                        @* <a class="downloadCloud" asp-action="Download" asp-route-id="@file.RequestWiseFileId">
                        <img src="~/image/cloud-arrow-down.svg" />
                        </a> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    <partial name="_FooterPartial" />

