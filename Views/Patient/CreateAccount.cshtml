@model HalloDoc.Entities.Patient.CreateAccount;

<head>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/patientLogin.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>

<div class="containers bgimg">
    <div class="patient-login">

        <div class="plogo">
            <img src="~/image/login-logo.png" alt="" class="img-fluid">
        </div>
        <div class="previous">
            <a asp-controller="Home" asp-action="Index"> &lt; Back</a>
        </div>
        <div class="patient-login-details">
            <h2>Create Your Account</h2>
            <form asp-action="CreateAccount" class="needs-validate" novalidate>
                <div class="form-floating mb-3 d-flex">
                    <input type="email" class="form-control" asp-for="Email" placeholder="name@example.com">
                    <label asp-for="Email">Email</label>
                    <i class="bi bi-person-circle icon"></i>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 d-flex">
                    <input type="password" class="form-control" asp-for="PasswordHash" placeholder="Password">
                    <label asp-for="PasswordHash">Password</label>
                    <i class="bi bi-eye-fill icon"></i>
                </div>
                <div class="form-floating d-flex">
                    <input type="password" class="form-control" asp-for="ConfirmPasswordHash" placeholder="Password">
                    <label asp-for="ConfirmPasswordHash">Password</label>
                    <i class="bi bi-eye-fill icon"></i>
                </div>
                <div class="login-btn1">
                    <button type="submit" class=" form-control login-btn">Log in</button>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="forgot-password">
                    <a asp-controller="Patient" asp-action="PatientForgot">Forgot Password?</a>
                </div>
            </form>
        </div>
        <div class="footer-links">
            <a href="#" class="footer">Terms Of Condition</a>
            <span class="footer">|</span>
            <a href="#" class="footer">Privacy Policy</a>
        </div>
    </div>
</div>
<div class="dark-mode">
    <img src="/image/noun-dark-mode-4066359.svg" alt="" width="30" height="25">
</div>